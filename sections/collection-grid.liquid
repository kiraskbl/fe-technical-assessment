<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-semibold mb-8 text-center">
            {{ collection.title }}
        </h2>

        {% if collection.products.size > 0 %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% for product in collection.products %}
                    <div class="border rounded-lg p-4 shadow-sm hover:shadow-md transition">
                        <a href="{{ product.url }}">
                            <img
                                    src="{{ product.featured_image | image_url: width: 500 }}"
                                    alt="{{ product.featured_image.alt | escape }}"
                                    class="mb-4 w-full h-64 object-cover rounded"
                                    loading="lazy"
                            />
                            <h3 class="text-lg font-medium">{{ product.title }}</h3>
                            <p class="text-gray-700 mt-1">{{ product.price | money }}</p>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-600">No products found in this collection.</p>
        {% endif %}
    </div>
</section>
