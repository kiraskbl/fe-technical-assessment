{% schema %}
{
  "name": "Collection Grid",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Our Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Choose collection"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Collection Grid",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}

<section class="py-12 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold mb-8 text-center">
            {{ section.settings.heading }}
        </h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            {% for block in section.blocks %}
                {% assign collection = block.settings.collection %}
                {% if collection %}
                    <a href="{{ collection.url }}" class="block group border rounded-lg overflow-hidden hover:shadow-lg transition">
                        {% if collection.image %}
                            <img src="{{ collection.image | image_url: width: 800 }}" alt="{{ collection.title }}" class="w-full h-48 object-cover transition duration-300 group-hover:scale-105">
                        {% endif %}
                        <div class="p-4">
                            <h3 class="text-lg font-semibold group-hover:text-blue-600 transition">
                                {{ collection.title }}
                            </h3>
                            <p class="text-sm text-gray-500">
                                {{ collection.all_products_count }} products
                            </p>
                        </div>
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
